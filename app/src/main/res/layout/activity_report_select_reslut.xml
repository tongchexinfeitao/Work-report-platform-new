<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/titleRelative"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/titleColor3">

        <ImageView
            android:id="@+id/resultGoback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/huibao_fanhui"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="我的汇报查询结果"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="70dp"
        android:background="#000000" />

    <TextView
        android:id="@+id/selectTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:background="@color/huise"
        android:gravity="center"
        android:textColor="@color/textColor2"
        android:textSize="22sp" />

    <View
        android:id="@+id/hengxian"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/selectTime"
        android:background="#000000" />

    <ImageView
        android:id="@+id/selectResultNoContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/empty" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hengxian">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
