<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@drawable/backgroud_style01"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:text="请选择日汇报类型:"
        android:textColor="@color/textColor2"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/typeRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_style02"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:text="咨询"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_style02"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:text="讲座"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_style02"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:text="招聘"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_style02"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:text="出差"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_style02"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:text="家访"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_style02"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:text="帮扶"
            android:textColor="#000000"
            android:textSize="18sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox_style02"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:text="其它"
            android:textColor="#000000"
            android:textSize="18sp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/type_commit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_commit01"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/type_gouBack"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="@drawable/button_cancel"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
